{
  "name": "key-ti",
  "version": "0.0.20",
  "description": "Key-ti - AWS Session Key Auto Renewal Tool",
  "main": "dist/main/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "electron .",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "build:renderer": "vite build",
    "dev": "pnpm run build && electron .",
    "watch": "tsc -w",
    "pack": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder && pnpm run post-dist",
    "post-dist": "./scripts/post-dist.sh"
  },
  "keywords": [
    "aws",
    "saml",
    "session",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.0.0",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "@aws-sdk/client-sts": "^3.0.0",
    "electron-updater": "^6.6.2",
    "otplib": "^12.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "build": {
    "appId": "com.piongate.key-ti",
    "productName": "Key-ti",
    "asar": true,
    "asarUnpack": "**/*.node",
    "compression": "normal",
    "removePackageScripts": true,
    "publish": {
      "provider": "github",
      "owner": "kiduko",
      "repo": "key-ti"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ],
      "icon": "build/icon.icns",
      "type": "distribution",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Key-ti needs to open browser for SAML authentication."
      }
    },
    "files": [
      "dist/**/*",
      "build/key-logo.png",
      "package.json",
      "!node_modules/@types/**",
      "!**/*.{ts,map}"
    ],
    "extraResources": [
      {
        "from": "build/key-logo.png",
        "to": "key-logo.png"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808"
}
