{
  "name": "key-ti",
  "version": "0.0.15",
  "description": "Key-ti - AWS Session Key Auto Renewal Tool",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc && cp src/renderer.html dist/ && cp build/key-logo.png dist/ && sed -i '' '2d' dist/renderer.js",
    "dev": "npm run build && electron .",
    "watch": "tsc -w",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder && npm run post-dist",
    "post-dist": "./scripts/post-dist.sh"
  },
  "keywords": [
    "aws",
    "saml",
    "session",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-sts": "^3.0.0",
    "electron-updater": "^6.6.2",
    "otplib": "^12.0.1"
  },
  "build": {
    "appId": "com.piongate.key-ti",
    "productName": "Key-ti",
    "asar": true,
    "asarUnpack": "**/*.node",
    "compression": "normal",
    "removePackageScripts": true,
    "publish": {
      "provider": "github",
      "owner": "kiduko",
      "repo": "key-ti"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ],
      "icon": "build/icon.icns",
      "type": "distribution",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Key-ti needs to open browser for SAML authentication."
      }
    },
    "files": [
      "dist/**/*",
      "build/key-logo.png",
      "package.json",
      "!node_modules/@types/**",
      "!**/*.{ts,map}"
    ],
    "extraResources": [
      {
        "from": "build/key-logo.png",
        "to": "key-logo.png"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
